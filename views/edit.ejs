<%- include('partials/header') %>

<div class="container">
    <div class="main-content">
        <div class="form-container">
            <h2>Edit Blog Post</h2>
            
            <form action="/blogs/edit/<%= post.blog_id %>" method="POST">
                <div class="form-group">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" id="title" name="title" class="form-input" value="<%= post.title %>" required>
                </div>
                
                <div class="form-group">
                    <label for="category" class="form-label">Category</label>
                    <select id="category" name="category" class="form-select">
                        <% categories.forEach(cat => { %>
                            <option value="<%= cat %>" <%= post.category === cat ? 'selected' : '' %>><%= cat %></option>
                        <% }); %>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="content" class="form-label">Content</label>
                    <textarea id="content" name="content" class="form-textarea" required><%= post.body %></textarea>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Update Post</button>
                    <a href="/blogs" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
